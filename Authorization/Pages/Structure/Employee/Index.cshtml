@page
@model Authorization.Pages.Structure.Employee.IndexModel
@{
}

<div class="row animated fadeInRightBig">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    Сотрудники
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Фото</th>
                                    <th>ФИО</th>
                                    <th>Отдел</th>
                                    <th>Грейд</th>
                                    <th>Позиция</th>
                                    <th>Команда</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var employee in Model.Employees)
                                {
                                    <tr>
                                        <td>
                                            <img class="image img-circle img-sm" src="~/images/a1.jpg">
                                        </td>
                                        <td>
                                            @employee.Name @employee.Surname
                                        </td>
                                        <td>
                                           @employee.Position?.Department?.Name
                                        </td>
                                        <td>
                                            @employee.Position?.Grade
                                        </td>
                                        <td>
                                            @employee.Position?.Name
                                        </td>
                                        <td>
                                            @employee.Team?.Name
                                        </td>
                                        <td style="width: 25%">
                                            <a class="btn btn-xs btn-danger pull-right" id="deleteButton" style="margin-left: 2px">
                                                <i class="fa fa-times"></i>
                                            </a>
                                            <a class="btn btn-xs btn-warning pull-right" id="editButton">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                        </td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

